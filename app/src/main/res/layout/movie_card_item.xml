<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.android.moviesapp.model.Movie" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="125dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/movie_image_card_item"
                android:layout_width="match_parent"
                android:layout_height="188dp"
                android:contentDescription="Poster Image"
                android:scaleType="fitXY"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                bind:posterPath="@{movie.posterPath}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_margin="4dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movie_image_card_item">

                <TextView
                    android:id="@+id/movie_title_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Default Title"
                    android:maxLines="1"
                    android:ellipsize="end"
                    bind:text="@{movie.title}" />

                <TextView
                    android:id="@+id/movie_release_date_card_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Default Date"
                    bind:text="@{movie.releaseDate}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:visibility="@{movie.voteAverage >= 1 ? android.view.View.VISIBLE : android.view.View.GONE}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_star_24" />

                    <TextView
                        android:id="@+id/movie_vote_average_card_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:text="0.0"
                        bind:text="@{Double.toString(movie.voteAverage)}" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>