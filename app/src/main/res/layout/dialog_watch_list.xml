<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        style="@style/themePrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/dialog_sort_text" />

    <RadioGroup
        android:id="@+id/watch_list_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <RadioButton
            android:id="@+id/watch_list_btn_title"
            style="@style/btnRadioGroup"
            android:text="@string/sort_title" />

        <RadioButton
            android:id="@+id/watch_list_btn_add_date"
            style="@style/btnRadioGroup"
            android:text="@string/sort_add_date" />

        <RadioButton
            android:id="@+id/watch_list_btn_popularity"
            style="@style/btnRadioGroup"
            android:text="@string/sort_popularity" />

        <RadioButton
            android:id="@+id/watch_list_btn_vote_average"
            style="@style/btnRadioGroup"
            android:text="@string/sort_vote_average" />

        <RadioButton
            android:id="@+id/watch_list_btn_vote_count"
            style="@style/btnRadioGroup"
            android:text="@string/sort_vote_count" />

        <RadioButton
            android:id="@+id/watch_list_btn_release_date"
            style="@style/btnRadioGroup"
            android:text="@string/sort_release_date" />

        <RadioButton
            android:id="@+id/watch_list_btn_id"
            style="@style/btnRadioGroup"
            android:text="@string/sort_id" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:gravity="center">

        <Button
            android:id="@+id/watch_list_btn_no"
            style="@style/themeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/watch_list_btn_yes"
            style="@style/themeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_weight="1"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>