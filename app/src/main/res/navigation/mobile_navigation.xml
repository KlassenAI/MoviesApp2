<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_search">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.android.moviesapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_movieFragment"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_home_movies"
            app:destination="@id/navigation_home_movies"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.android.moviesapp.ui.movie.MovieFragment"
        android:label="Movie"
        tools:layout="@layout/fragment_movie">

        <argument
            android:name="movie"
            app:argType="com.android.moviesapp.model.Movie" />

        <argument
            android:name="favorite"
            app:argType="boolean" />

    </fragment>

    <fragment
        android:id="@+id/navigation_home_movies"
        android:name="com.android.moviesapp.ui.home.HomeMoviesFragment"
        android:label="Movies"
        tools:layout="@layout/home_movies_fragment">

        <action
            android:id="@+id/action_navigation_home_movies_to_navigation_movie"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/fragment_open_enter"
            app:popUpTo="@id/navigation_home_movies"
            app:popUpToInclusive="true" />

        <argument
            android:name="response"
            app:argType="com.android.moviesapp.model.TypeResponse" />

    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.android.moviesapp.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navigation_search_to_navigation_movie"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/fragment_open_enter" />
    </fragment>

    <fragment
        android:id="@+id/navigation_wishlist"
        android:name="com.android.moviesapp.ui.wishlist.WishlistFragment"
        android:label="@string/title_wishlist"
        tools:layout="@layout/fragment_wishlist" >

        <action
            android:id="@+id/action_navigation_wishlist_to_movieFragment"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/fragment_open_enter" />

    </fragment>

</navigation>